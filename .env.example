# Environment examples for HRMS_Backend
# Set DEBUG=False in production (uses PostgreSQL on Render)
DEBUG=False

# Secret key (create a secure random value)
SECRET_KEY=replace-with-secure-secret

# Comma-separated hosts (example)
ALLOWED_HOSTS=hrms-assesment-ghrr.onrender.com,localhost,127.0.0.1

# Frontend origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-frontend.com

# PostgreSQL Database (only needed when DEBUG=False)
DB_NAME=hrms_db
DB_USER=hrms_user
DB_PASSWORD=replace-db-password
DB_HOST=your-db-host.onrender.com
DB_PORT=5432
