# ==========================================
# CRITICAL: Set this to switch between modes
# ==========================================
# For Development: DEBUG=True (uses SQLite)
# For Production: DEBUG=False (uses PostgreSQL)
DEBUG=True

# ==========================================
# REQUIRED FOR BOTH MODES
# ==========================================
SECRET_KEY=your-secret-key-here-change-this

# ==========================================
# ONLY NEEDED FOR PRODUCTION (DEBUG=False)
# ==========================================
# Web URLs
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,yourapp.onrender.com

# Frontend URL for CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# PostgreSQL Database (only needed when DEBUG=False)
DB_NAME=hrms_db
DB_USER=hrms_user
DB_PASSWORD=your-secure-password-here
DB_HOST=your-db-host.c.bitnami.com
DB_PORT=5432
